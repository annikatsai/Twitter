<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#39b4d9"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/etPost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/composeHint"
        android:inputType="textMultiLine"
        android:maxLength="140" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tweet"
        android:id="@+id/btnTweet"
        android:layout_alignBottom="@+id/etPost"
        android:layout_alignRight="@+id/etPost"
        android:layout_alignEnd="@+id/etPost" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="140"
        android:id="@+id/tvCharCount"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/etPost"
        android:layout_toStartOf="@+id/btnTweet"
        android:layout_alignTop="@+id/btnTweet"
        android:layout_toLeftOf="@+id/btnTweet" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivExit"
        android:src="@drawable/ic_exit"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_alignLeft="@+id/etPost"
        android:layout_alignStart="@+id/etPost" />


</RelativeLayout>